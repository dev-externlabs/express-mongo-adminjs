{
    "compilerOptions": {
      "strict": true,
      "module": "commonjs",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "#/*":["config/*"],
        "@/*": ["src/*"]
      },
      "types": [
        "node",
      ],
      "typeRoots": [
        "./node_modules/@types"
      ],
    },
    "include": [
      "config/*",
      "src/**/*",
      "tests/**/*", ".env*"
    ],
    "exclude":["node_modules","src/types/generated/**/*.ts"]
  }
